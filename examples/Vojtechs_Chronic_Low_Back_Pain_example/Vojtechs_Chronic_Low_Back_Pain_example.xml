<MetaDataVersion OID="MV.001" Name="Metadata version 1">
    <!-- ODMv2 prototype implementation of Vojtech Huser's "Low back pain" questionnaire.
    See: https://docs.google.com/forms/d/e/1FAIpQLSf1IWu_C6uggKY7gkF4AJKyqxJaTdXAB4PysmYBBSKsGclYGQ/viewform 
    and https://www.painconsortium.nih.gov/sites/default/files/cLBP_RTF_MinimalDataset.pdf

The was of defining the "repeat" can still be changed, depending on decisions of the ODMv2 team.
Author: Jozef Aerts
Latest update: 2020-07-20   -->
    <!-- IMPORTANT REMARK: There are different methods possible of describing/defining this questionnaire in ODMv2.
        I will try to provide several of them.
    -->
    <!-- "Classic" method as would have been implemented in ODM versions 1.3.x -->
    <ItemGroupDef OID="IG.QUESTIONNAIRE_CLASSIC" Name="Questionnaire about low back pain in the last 7 days" Repeating="No">
        <!-- In the classic method, the "Description" is used/abused to have a "title" on the group of questions -->
        <!-- This classic method does NOT solve the PRESENTATION as a matrix -->
        <!-- Remark that OrderNumber is about order of presentation, not about any ranking of e.g. importance -->
        <ItemRef ItemOID="IT.INTERFERE_DAY_TO_DAY" Mandatory="Yes" OrderNumber="1"/>
        <ItemRef ItemOID="IT.INTERFERE_WORK_AROUND_HOME" Mandatory="Yes" OrderNumber="2"/>
        <ItemRef ItemOID="IT.INTERFERE_SOCIAL_ACTIVITIES" Mandatory="Yes" OrderNumber="3"/>
        <ItemRef ItemOID="IT.INTERFERE_HOUSEHOLD_CHORES" Mandatory="Yes" OrderNumber="4"/>
    </ItemGroupDef>
    
    <!-- New possible method, using a "Repeat" -->
    <ItemGroupDef OID="IG.QUESTIONNAIRE_REPEAT" Name="Questionnaire about low back pain in the last 7 days" Repeating="Static">
        <ItemRef ItemOID="IT.QUESTION_REPEAT" Mandatory="Yes"/>
    </ItemGroupDef>
    
    <!-- Single ItemDef for "repeat". The RepeatItem="Yes" indicates that this question is repeating, 
        with (sub)quesions governed by a CodeList -->
    <ItemDef OID="IT.QUESTION_REPEAT" Name="Repeat question" DataType="integer" Length="1" RepeatItem="Yes">
        <Question>
            <TranslatedText xml:lang="en">In the past 7 days</TranslatedText>
        </Question>
        <!-- The "question" for each "detail item" (row in the matrix) itself is governed by a CodeList -->
        <CodeListRef CodeListOID="CL.REPEAT"/>
    </ItemDef>
    <!-- Individual ItemDef, reusable -->
    <ItemDef OID="IT.INTERFERE_DAY_TO_DAY" Name="Day to day interference of chronic low back pain" DataType="integer" Length="1">
        <Question>
            <TranslatedText xml:lang="en">How much did pain interfere with your day-to-day activities?</TranslatedText>
        </Question>
        <CodeListRef CodeListOID="CL.LOW_BACK_INTERFERENCE_SCALE"/>
    </ItemDef>
    <ItemDef OID="IT.INTERFERE_WORK_AROUND_HOME" Name="Day to day interference with work around home" DataType="integer" Length="1">
        <Question>
            <TranslatedText xml:lang="en">How much did pain interfere with work around the home?</TranslatedText>
        </Question>
        <CodeListRef CodeListOID="CL.LOW_BACK_INTERFERENCE_SCALE"/>
    </ItemDef>
    <ItemDef OID="IT.INTERFERE_SOCIAL_ACTIVITIES" Name="Day to day interference with participation in social activities"  DataType="integer" Length="1">
        <Question>
            <TranslatedText xml:lang="en">How much did pain interfere with your ability to participate in social activities?</TranslatedText>
        </Question>
        <CodeListRef CodeListOID="CL.LOW_BACK_INTERFERENCE_SCALE"/>
    </ItemDef>
    <ItemDef OID="IT.INTERFERE_HOUSEHOLD_CHORES" Name="Day to day interference with household chores" DataType="integer" Length="1">
        <Question>
            <TranslatedText xml:lang="en">How much did pain interfere with your ability to participate in social activities?</TranslatedText>
        </Question>
        <CodeListRef CodeListOID="CL.LOW_BACK_INTERFERENCE_SCALE"/>
    </ItemDef>
    <!-- CodeLists -->
    <!-- CodeList for the answer to the question(s) -->
    <CodeList OID="CL.LOW_BACK_INTERFERENCE_SCALE" Name="Low back pain interference scale Codelist">
        <CodeListItem CodedValue="1" Rank="1"><!--  would we need "OrderNumber" here? -->
            <Decode><TranslatedText xml:lang="en">Not at all</TranslatedText></Decode>
        </CodeListItem>
        <CodeListItem CodedValue="2" Rank="2"><!--  would we need "OrderNumber" here? -->
            <Decode><TranslatedText xml:lang="en">A little bit</TranslatedText></Decode>
        </CodeListItem>
        <CodeListItem CodedValue="3" Rank="3"><!--  would we need "OrderNumber" here? -->
            <Decode><TranslatedText xml:lang="en">Somewhat</TranslatedText></Decode>
        </CodeListItem>
        <CodeListItem CodedValue="4" Rank="4"><!--  would we need "OrderNumber" here? -->
            <Decode><TranslatedText xml:lang="en">Quite a bit</TranslatedText></Decode>
        </CodeListItem>
        <CodeListItem CodedValue="5" Rank="5"><!--  would we need "OrderNumber" here? -->
            <Decode><TranslatedText xml:lang="en">Very much</TranslatedText></Decode>
        </CodeListItem>
        <!-- CodeList for the "repeating" question text -->
        <CodeList OID="CL.REPEAT" Name="Question repeat items">
            <CodeListItem CodedValue="1" OrderNumber="1">
                <Decode><TranslatedText xml:lang="en">How much did pain interfere with your day-to-day activities?</TranslatedText></Decode>
            </CodeListItem>
            <CodeListItem CodedValue="2" OrderNumber="2">
                <Decode><TranslatedText xml:lang="en">How much did pain interfere with work around the home?</TranslatedText></Decode>
            </CodeListItem>
            <CodeListItem CodedValue="3" OrderNumber="3">
                <Decode><TranslatedText xml:lang="en">How much did pain interfere with your ability to participate in social activities?</TranslatedText></Decode>
            </CodeListItem>
            <CodeListItem CodedValue="4" OrderNumber="4">
                <Decode><TranslatedText xml:lang="en">How much did pain interfere with your household chores?</TranslatedText></Decode>
            </CodeListItem>
        </CodeList>
    </CodeList>
</MetaDataVersion>