        </Description>
        <!-- The cell consist of only one "Segment", which is the screening segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.SCREEN" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <!-- First treatment cells -->
    <StudyEventGroupDef OID="SE.FIRST_TREATMENT.P-L-H" Name="P-L-H first treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">First treatment cell in placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the placebo treatment segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.PLACEBO" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.FIRST_TREATMENT.L-P-H" Name="L-P-H first treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">First treatment cell in low-dose - placebo - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the low-dose (5mg) treatment segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.LOWDOSE" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.FIRST_TREATMENT.L-H-P" Name="L-H-P first treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">First treatment cell in low-dose - high-dose - placebo arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the low-dose (5mg) treatment segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.LOWDOSE" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <!-- First rest cells -->
    <StudyEventGroupDef OID="SE.FIRST_REST.P-L-H" Name="P-L-H first rest study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">First rest cell in placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consists of only one "Segment", which is the rest cell -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.REST" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.FIRST_REST.L-P-H" Name="L-P-H first rest study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">First rest cell in low-dose - placebo - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consists of only one "Segment", which is the rest cell -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.REST" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.FIRST_REST.L-H-P" Name="L-H-P first rest study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">First rest cell in low-dose - high-dose - placebo</TranslatedText>
        </Description>
        <!-- The cell consists of only one "Segment", which is the rest cell -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.REST" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <!-- Second treatment cells -->
    <StudyEventGroupDef OID="SE.SECOND_TREATMENT.P-L-H" Name="P-L-H second treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Second treatment cell in placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the low-dose (5mg) treatment segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.LOWDOSE" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.SECOND_TREATMENT.L-P-H" Name="L-P-H second treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Second treatment cell in low-dose - placebo - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the placebo treatment segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.PLACEBO" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.SECOND_TREATMENT.L-H-P" Name="L-H-P second treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Second treatment cell in low-dose - high-dose - placebo arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the high-dose (10mg) treatment segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.HIGHDOSE" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <!-- Second rest cells -->
    <StudyEventGroupDef OID="SE.SECOND_REST.P-L-H" Name="P-L-H second rest study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Second rest cell in placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consists of only one "Segment", which is the rest cell -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.REST" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.SECOND_REST.L-P-H" Name="L-P-H second rest study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Second rest cell in low-dose - placebo - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consists of only one "Segment", which is the rest cell -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.REST" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.SECOND_REST.L-H-P" Name="L-H-P second rest study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Second rest cell in low-dose - high-dose - placebo</TranslatedText>
        </Description>
        <!-- The cell consists of only one "Segment", which is the rest cell -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.REST" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <!-- Third treatment cells -->
    <StudyEventGroupDef OID="SE.THIRD_TREATMENT.P-L-H" Name="P-L-H third treatment study cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Third treatment cell in placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
