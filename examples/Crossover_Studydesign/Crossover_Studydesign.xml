    <!-- Follow-up epoch cells -->
    <StudyEventGroupDef OID="SE.FOLLOW_UP.P-L-H" Name="P-L-H follow-up cell">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Follow-up cell in placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the follow-up segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.FOLLOW-UP" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.FOLLOW_UP.L-P-H" Name="L-P-H follow-up cell">
        <Description>
