    <!-- Segments/Elements: there are only 6 of them:
            screening, placebo treatment, low-dose (5mg) treatment, high-dose (10mg) treatment, rest, and follow-up. 
            Any activities, such as visits, can then be assigned to any of the segments -->
    <!-- Remark that a Segment corresponds to a "trial element" in SDTM -->
    <StudyEventGroupDef OID="SEG.SCREEN" Name="Screening Segment">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Screening segment</TranslatedText>
        </Description>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SEG.PLACEBO" Name="Placebo segment">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Placebo treatment segment</TranslatedText>
        </Description>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SEG.LOWDOSE" Name="Low-dose segment">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Low-dose (5mg) treatment segment</TranslatedText>
        </Description>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SEG.HIGHDOSE" Name="High-dose treatment">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">High-dose (10mg) treatment segment</TranslatedText>
        </Description>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SEG.REST" Name="Rest segment">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Rest segment - no treatment is provided to the subject</TranslatedText>
        </Description>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SEG.FOLLOW-UP" Name="Follow-up segment">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Follow-up segment</TranslatedText>
        </Description>
    </StudyEventGroupDef>
