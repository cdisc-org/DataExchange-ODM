    <!-- Study design example from the SDTM-IG 3.3: Example Trial 2: Crossover.
    The study design has 3 arms: "P-L-H" (placebo-low-high dose), "L-P-H" (low-placebo-high dose), and "L-H-P" (low-high-placebo dose) -->
    <Protocol>
        <StudyStructure>
            <Description>
                <TranslatedText xml:lang="en" Type="text/plain">Study design example from the SDTM-IG 3.3: 
                    Example Trial 2: Crossover. The study design has 3 arms: "P-L-H" (placebo-low-high dose), 
                    "L-P-H" (low-placebo-high dose), 
                    and "L-H-P" (low-high-placebo dose</TranslatedText>
            </Description>
            <!-- description of the 3 arms -->
            <Arm OID="ARM.P-L-H" Name="Crossover study arm P-L-H">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Study arm with sequence placebo - low dose - high dose</TranslatedText>
                </Description>
            </Arm>
            <Arm OID="ARM.L-P-H" Name="Crossover study arm L-P-H">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Study arm with sequence low dose - placebo - high dose</TranslatedText>
                </Description>
            </Arm>
            <Arm OID="ARM.L-H-P" Name="Crossover study arm L-H-P">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Study arm with sequence low dose - high dose - placebo</TranslatedText>
                </Description>
            </Arm>
            <!-- The study has 7 epochs: screening, first treatment, first rest, second treatment, second rest, third treatment, 
                and follow-up -->
            <Epoch OID="EP.SCREEN" Name="Screening epoch" SequenceNumber="1">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Screening epoch, the first epoch in the study</TranslatedText>
                </Description>
            </Epoch>
            <Epoch OID="EP.FIRST_TREATMENT" Name="First treatment epoch" SequenceNumber="2">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">First treatment epoch, the second epoch in the study</TranslatedText>
                </Description>
            </Epoch>
            <Epoch OID="EP.FIRST_REST" Name="First rest epoch" SequenceNumber="3">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">First rest epoch, comes after the first treatment epoch</TranslatedText>
                </Description>
            </Epoch>
            <Epoch OID="EP.SECOND_TREATMENT" Name="Second treatment epoch" SequenceNumber="4">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Second treatment epoch, comes after first rest epoch</TranslatedText>
                </Description>
            </Epoch>
            <Epoch OID="EP.SECOND_REST" Name="Second rest epoch" SequenceNumber="5">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Second rest epoch, comes after the second treatment epoch</TranslatedText>
                </Description>
            </Epoch>
            <Epoch OID="EP.THIRD_TREATMENT" Name="Third treatment epoch" SequenceNumber="6">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Third treatment epoch, comes after second rest epoch</TranslatedText>
                </Description>
            </Epoch>
            <Epoch OID="EP.FOLLOWUP" Name="Follow-up epoch" SequenceNumber="7">
                <Description>
                    <TranslatedText xml:lang="en" Type="text/plain">Follow-up epoch, last epoch in the study</TranslatedText>
                </Description>
            </Epoch>
        </StudyStructure>
    </Protocol>
    <!-- The "study cells" are described through "StudyEventGroupDef" elements -->
    <StudyEventGroupDef OID="SE.SCREEN.P-L-H" Name="P-L-H screening study cell" ArmOID="ARM.P-L-H"
        EpochOID="EP.SCREEN">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Screening cell in Placebo - low-dose - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the screening segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.SCREEN" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.SCREEN.L-P-H" Name="L-P-H screening study cell" ArmOID="ARM.L-P-H"
        EpochOID="EP.SCREEN">
        <Description>
            <TranslatedText xml:lang="en" Type="text/plain">Screening cell in low-dose - placebo - high-dose arm</TranslatedText>
        </Description>
        <!-- The cell consist of only one "Segment", which is the screening segment -->
        <StudyEventGroupRef StudyEventGroupOID="SEG.SCREEN" Mandatory="Yes"/>
    </StudyEventGroupDef>
    <StudyEventGroupDef OID="SE.SCREEN.L-H-P" Name="L-H-P screening study cell" ArmOID="ARM.L-H-P"
        EpochOID="EP.SCREEN">
        <Description>
